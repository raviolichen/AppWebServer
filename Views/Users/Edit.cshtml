@model AppWebServer.Models.User

@{
    ViewBag.Title = "編輯";
    Layout = "~/Views/Shared/_manageLayout.cshtml";
}

<h2>編輯</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>使用者管理</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.userId)

    <div class="form-group">
        <div class="control-label col-md-2">
            使用者名稱
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">
            使用者電話
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">
            使用者驗證資訊
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.oAuth, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.oAuth, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">
            登入帳號
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.loginName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.loginName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">
            登入密碼
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">
            使用者群組
        </div>
        <div class="col-md-10">
            @Html.DropDownList("powerGroup", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.powerGroup, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">
            是否啟用
        </div>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.isEanble, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.isEanble, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2"><p>停權期限</p></div>
        <div class="col-md-10">
            <div class='input-group datepicker date'>
                <input type="datetime" value="@(Model.prohibit==null?"":Model.prohibit.Value.ToString("yyyy/MM/dd"))" name="prohibit" id="prohibit" class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="儲存" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("回到列表", "Index")
</div>
