@model AppWebServer.Models.Gold

@{
    ViewBag.Title = "新增";
    Layout = "~/Views/Shared/_manageLayout.cshtml";
}

<h2>新增</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>金幣管理</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-2"><p>金幣名稱</p></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.goldname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.goldname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><p>金幣內容</p></div>
        <div class="col-md-10">
            @Html.TextArea("html", new { id = "html", @name = "html", @class = "editor" })
            @Html.ValidationMessageFor(model => model.html, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><p>圖片url</p></div>
        <div class="col-md-10">
            @Html.Action("FormatPotos", new { })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><p>金幣數量(正數為扣除數量，負數為增加)</p></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.goldnum, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.goldnum, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><p>使用者可掃描次數</p></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.userUsetimes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.userUsetimes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><p>金幣最大使用次數</p></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.totalUsetimes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.totalUsetimes, "", new { @class = "text-danger" })
        </div>
    </div>
    @if (User.IsInRole("admin") || User.IsInRole("manage"))
    {

        <div class="form-group">
            <div class="control-label col-md-2"><p>擁有者帳號</p></div>
            <div class="col-md-10">
                @Html.DropDownList("ownerUserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ownerUserId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"><p>是否啟用</p></div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.isEnable, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.isEnable, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="送出" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回到列表", "Index")
</div>
