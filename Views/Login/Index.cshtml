
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_manageLayout.cshtml";
}
<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>登入</h4>
    <hr />

    <div class='form-group'>
        <label class='control-label col-md-2'>帳號</label>
        <div class='col-md-10'>
            <input class='form-control text-box single-line' id='acc' name='acc' type='text' value='@(ViewBag.acc??"")'>
            <span class='field-validation-valid text-danger' data-valmsg-for='acc' data-valmsg-replace='true'></span>
        </div>
    </div>

    <div class='form-group'>
        <label class='control-label col-md-2'>密碼</label>
        <div class='col-md-10'>
            <input class='form-control text-box single-line' id='Password' name='Password' type='password' value=''>
            <span class='field-validation-valid text-danger' data-valmsg-for='Password' data-valmsg-replace='true'></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="登入" class="btn btn-default" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <span style="color:red">@ViewBag.message</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("商家註冊", "Index", "Registered", null, null)
        </div>
    </div>
</div>
}


