@model AppWebServer.Models.messagePublish

@using (Html.BeginForm("Create", "messagePublishes"))
{
    @Html.AntiForgeryToken()

<td>
    @Html.DropDownList("p_users", null, htmlAttributes: new { @class = "form-control" })
    @Html.EditorFor(model => model.p_users, new { htmlAttributes = new { @class = "form-control",@style="display:none" } })
    @Html.ValidationMessageFor(model => model.p_users, "", new { @class = "text-danger" })
</td>
    <td>
        <div class='input-group datetimepicker date'>
            <input type='text' class="form-control " id="pDateStart" name="pDateStart"  value="@(DateTime.Now.ToString("yyyy/MM/dd HH:mm"))"/>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </td>
    <td>
        <div class='input-group datetimepicker date' >
            <input type='text' class="form-control " id="pDateStart" name="pDateEnd" value="@(DateTime.Now.ToString("yyyy/MM/dd HH:mm"))"/>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </td>
    <td>
        @Html.EditorFor(model => model.pmessage, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.pmessage, "", new { @class = "text-danger" })
    </td>
    <td  colspan="2">
        <input type="submit" value="新增" class="btn btn-default" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </td>
}
